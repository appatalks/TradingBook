{
  "name": "tradingbook",
  "version": "1.0.0",
  "description": "TradingBook - Advanced trading journal application with privacy-focused offline functionality",
  "main": "public/electron.js",
  "homepage": "./",
  "repository": {
    "type": "git",
    "url": "https://github.com/appatalks/TradingBook.git"
  },
  "bugs": {
    "url": "https://github.com/appatalks/TradingBook/issues"
  },
  "author": "appatalks",
  "license": "MIT",
  "keywords": [
    "trading",
    "journal",
    "electron",
    "react",
    "typescript",
    "sqlite",
    "privacy",
    "offline",
    "portfolio",
    "analytics",
    "stocks",
    "crypto",
    "forex",
    "options"
  ],
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-build": "npm run build && electron-builder",
    "build-appimage": "npm run build && electron-builder --linux AppImage"
  },
  "dependencies": {
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/node": "^24.3.0",
    "better-sqlite3": "^12.2.0",
    "chart.js": "^4.5.0",
    "date-fns": "^3.6.0",
    "electron-is-dev": "^2.0.0",
    "electron-store": "^8.1.0",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18.2.0",
    "react-router": "^7.8.2",
    "react-scripts": "5.0.1",
    "tailwindcss": "^4.1.12",
    "typescript": "^4.8.4"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.9",
    "autoprefixer": "^10.4.13",
    "concurrently": "^9.2.1",
    "electron": "^32.3.3",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "postcss": "^8.4.20",
    "wait-on": "^8.0.4"
  },
  "build": {
    "appId": "com.thetradersjournal.app",
    "productName": "TradingBook",
    "directories": {
      "buildResources": "assets"
    },
    "files": [
      "build/**/*",
      "public/electron.js",
      "public/preload.js",
      "src/database/**/*",
      "node_modules/**/*"
    ],
    "linux": {
      "target": "AppImage",
      "category": "Office"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
